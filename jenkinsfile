pipeline {
    agent any

    tools {nodejs "node"}

     environment {
            CI = 'true'
        }

    stages {
        stage('Build') {
            steps {
                git 'https://github.com/rahulkhichi199/node-.git'
                sh 'npm install'
            }
        }
        stage('Test') {
                    steps {
                        sh './jenkins/scripts/test.sh'
                    }
                }
        stage('Deploy') {
                    steps {
                        sh './jenkins/scripts/deliver.sh'
                    }
                }      

    }
}